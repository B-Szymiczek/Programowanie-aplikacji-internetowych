        let numer7
        do
        {
            numer7 = parseInt(prompt('Podaj liczbę'));
        } 
        while (isNaN(numer7));
        
        let numer8
        do
        {
            numer8 = parseInt(prompt('Podaj liczbę'));
        } 
        while (isNaN(numer8));

        let sign = prompt('Podaj znak działania')

        switch (sign) 
        {
            case '+':
                document.write('<p>' + (numer7 + numer8) + '</p>')
                break;
        
                case '-':
                document.write('<p>' + (numer7 - numer8) + '</p>')
                break;

                case '*':
                document.write('<p>' + (numer7 * numer8) + '</p>')
                break;

                case '/':
                document.write('<p>' + (numer7 / numer8) + '</p>')
                break;
            default:
                document.write('<p>Nie znam takiego działania</p>')
                break;
        }



    </script>
